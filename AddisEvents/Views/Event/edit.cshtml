@model Event

@{
    ViewData["Title"] = "Edit";
}
<h2>Edit Event</h2>
<form asp-action="Edit" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Id"></label>
            <input type="hidden" name="EventID" value="@Model.Id" />
            <input type="text" class="form-control" id="EventId" name="Id" placeholder="" value="@Model.Id">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="EventName"></label>
            <input asp-for="EventName" class="form-control">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="EventDate"></label>
            <input asp-for="EventDate" class="form-control">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="EventType"></label>
            <input asp-for="EventType" class="form-control">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="EventDescription"></label>
            <input asp-for="EventDescription" class="form-control">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="OtherInfo"></label>
            <input asp-for="OtherInfo" class="form-control">
        </div>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-danger">Cancel</a>
</form>