@model Event

@{
    ViewData["Title"] = "Details";
}

<h1>Details for @Model.EventName</h1>

<table class="table">
    <tr>
        <th>Event ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Event Name</th>
        <td>@Model.EventName</td>
    </tr>
    <tr>
        <th>Event Date</th>
        <td>@Model.EventDate</td>
    </tr>
    <tr>
        <th>Event Type</th>
        <td>@Model.EventType</td>
    </tr>
    <tr>
        <th>Event Description</th>
        <td>@Model.EventDescription</td>
    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <th>Other Info</th>
        <td>@Model.OtherInfo</td>
    </tr>
</table>

<a asp-action="Index"class="btn btn-info">Back to home Page</a>
